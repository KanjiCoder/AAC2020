        FV4 /**Normalized_0_to_1_RGBA_Color**/
        AAC2020_UISHARE_Get_but_pix(
        /**/I32 dex_edi //:<-- What Editor?
        ,   I32 lis_dex //:<-- What UI? 
        ,   I32     b_y //:<-- What Button?
        ,   I32     b_x //:<-- What Character Cell?
        )
        {
            if( dex_edi > 0 ){ /**  NOOP **/ };
            if( lis_dex > 0 ){ /**  NOOP **/ };

            I32 oex=( MOD( b_x , 2 ) );
            I32 oey=( MOD( b_y , 2 ) );
            
            FV4 rec_pix = MF4(
                (   MF3(   oex )*64.0 ) / 255.0
            ,   (   MF3(   oey )*64.0 ) / 255.0
            ,   (      (   0.0 )* 1.0 ) / 255.0
            ,   (      ( 255.0 )* 1.0 ) / 255.0
            );;

            return( rec_pix );
        }

