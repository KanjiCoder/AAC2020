    REC
    AAC2020_UISHARE_Get_REC_p5d( 
        I32 lis_dex //:<--[ 0 ==> UILISTS.P5D_UI0 ] --=--
                    //:   [ 1 ==> UILISTS.P5D_UI1 ]   |
                    //:   [ 2 ==> UILISTS.P5D_UI2 ]   8
                    //:   [ # ==> UILISTS.P5D_UI# ]   |
                    //:   [ 7 ==> UILISTS.P5D_UI7 ] --=--
    )
    {
        ASS( lis_dex >= 0 && lis_dex <=(8-1) );

        REC p5d_rec; /**[ p5d_ui0 ... p5d_ui7 ]**/
        p5d_rec =(
        AAC2020_TAUFRAG_Get_REC_p5d(
            lis_dex //:EXAMPLE:[ P5D_UR0 | P5D_UR1 | ... ]
        ));;
        return( p5d_rec );
    }
