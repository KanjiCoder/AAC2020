        U08   FREE_01 ; //:[ _ ]://
        U08   FRAGBED ; //:[ _ ]://
        U08   PIXNAME ; //:[ _ ]://
        U08   GPUDATA ; //:[ _ ]://
        U08   PIXLOAD ; //:[ _ ]://
        U08   PAINT5D ;
        
        }AAC2020_SILENCE={
            .SILENCE = 0 //:Set to 1 silences ALL SUB LIBRARIES
        
        ,   .FILEBOI = 0 
        ,   .NATIKEY = 0
        ,   .IKEYBOX = 0
        ,   .IMOUBOX = 0
        ,   .CEDITOR = 0
        ,   .GINAWIN = 0
        ,   .DUI     = 0
        ,   .GLEBIND = 0
        ,   .GLCONST = 0
        ,   .CPUNIFO = 0
        ,   .GRAQUAD = 0
        ,   .FREE_01 = 0
        ,   .FRAGBED = 0
        ,   .PIXNAME = 0
        ,   .GPUDATA = 0
        ,   .PIXLOAD = 0
        ,   .PAINT5D = 0
        
        };
        
