            I32 x_1_i32 = (*INPUT_OUTPUT_PARAM_x_1_i32);
            I32 y_0_i32 = (*INPUT_OUTPUT_PARAM_y_0_i32);
            I32 y_1_i32 = (*INPUT_OUTPUT_PARAM_y_1_i32);

        //:------------------------:extract_or_restore_values://

                //:back_off_the_boarders:--------------------://

