            ,   loc_t_x                            //[ x ]//  
            ,   loc_t_y                            //[ x ]//
            ));;                                   //[ x ]//
                                                   //[ x ]//
            til_val=(                              //[ x ]//
            OPEN_GL_PAINT5D_BitPack_Get(           //[ x ]//
