        ,   I32  aus_dex                           //[ x ]//
                                                   //[ x ]//
        )                                          //[ x ]//
        {                                          //[ x ]//
        //:declare__variables: . . . . . . . . . . . . . ://
                                                   //[ x ]//
            U32 til_val =( U00 );                  //[ x ]//
                                                   //[ x ]//
            /** glo == glo_t_x & glo_t_y  **/      //[ x ]//
            IV2 glo    ;                           //[ x ]//
                                                   //[ x ]//
        //: . . . . . . . . . . . . . :declare__variables://
