//:IKEYBOX: InputKEYBOX: ------------------------------------://
//:                                                          ://
//:     WHAT:                                                ://
//:         1. A "P.O. Box For Keys that were pressed.       ://
//:                                                          ://
//:      WHY:                                                ://
//:         1. Mitigate MultiThreading Problems.             ://
//:                                                          ://
//:         2. Allow for a design that does not require      ://
//:            callbacks for future code to have a way       ://
//:            to know what keys were pressed.               ://
//:                                                          ://
//:----------------------------------------------------------://
//:INIT_NONE:================================================://
#define U32 uint32_t /** GCC: <stdint.h> **/

    U32
    AAC2020_IKEYBOX_InitNone( U32 u32 ){

        //:InitNone: Explicitly No Init

        if( u32 ){ /** Reserved For Future Use **/ };
        return( 0x00 );
    }

#undef  U32
//:================================================:INIT_NONE://
//:IS_DIRTY:=================================================://
#define U32 uint32_t /** GCC: <stdint.h> **/

    U32
    AAC2020_IKEYBOX_IsDirty( void ){

        return( AAC2020_IKEYBOX_dirty );

    }

#undef  U32
//:=================================================:IS_DIRTY://
//:IS_CLEAN:=================================================://
#define U32 uint32_t /** GCC: <stdint.h> **/

    U32
    AAC2020_IKEYBOX_IsClean( void ){

        return( AAC2020_IKEYBOX_dirty <= 0 );

    }

#undef  U32
//:=================================================:IS_CLEAN://
//:MARK_AS_DIRTY:============================================://
#define U32 uint32_t /** GCC: <stdint.h> **/

    void
    AAC2020_IKEYBOX_MarkAsDirty( void ){

        AAC2020_IKEYBOX_dirty = ( 1 );

    }

#undef  U32
//:============================================:MARK_AS_DIRTY://