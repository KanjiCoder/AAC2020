    void
    AAC2020_PIXLOAD_TestPattern(struct AAC2020_GPUDATA* gpudata)
    {
        U32 err_num =( 407 /** TRAP **/ );
            err_num = AAC2020_GLEBIND.glGetError();
        if( err_num != 0 ){ ERR("[ERROR_ON_ENTRY:PLTP]"); };

