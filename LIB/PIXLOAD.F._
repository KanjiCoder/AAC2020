            gpudata -> cpu_pix[ i_A ] = ( v_A );
            num_pixels_put++;

        };;};;

        /** Hardcode test value for now **/
        if( num_pixels_put != (512 * 512) ){ 
        
            int got = num_pixels_put ; /** GOTTEN   **/
            int exp = ( 512 * 512   ); /** EXPECTED **/

