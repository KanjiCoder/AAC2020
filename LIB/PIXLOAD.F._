            //:    1  _  X  _  X  _  X  _

            //:    0  X  _  X  _  X  _  X

            //:    1  _  X  _  X  _  X  _

            //:    0  X  _  X  _  X  _  X

            //:    1  _  X  _  X  _  X  _

            //:    0  X  _  X  _  X  _  X

            I32 e_x =( p_x          % 2  ); //:even_x
            I32 e_y =(        p_y   % 2  ); //:even_y
            I32 e_c =((e_x  + e_y ) % 2  ); //:even_c
            if(  0 ==  e_c ){
